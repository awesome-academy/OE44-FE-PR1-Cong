include ../components/sidebar.pug

+breadcrumbs('Cây dạ lam', 'cay-da-lam')

.grid.wide 
    .row
        .col.l-3.m-4.c-0
            section.sidebar
                +product-list
                +new-feed
                +blog-tag
        block newContent
            .col.l-9.m-8.c-12
                .row
                    section.news
                        .col.l-12.m-12.c-12
                            each item in newsList 
                                article
                                    h4.news__title
                                        a(href="#").news__title-link= item.title 
                                    
                                    ul.news__daytime
                                        time(datetime=`${item.day}T${item.time}`)
                                        
                                        li.day
                                            i.far.fa-calendar-minus.news__icon
                                            span= item.day
                                        
                                        li.time
                                            i.far.fa-clock.news__icon
                                            span= item.time
                                        
                                        li.day
                                            i.far.fa-comment-dots.news__icon
                                            span= `${item.comment} Bình luận`
                                    
                                    .news__img(style=`background-image:url(./assets/img/news/${item.urlImg})`)
                                    .news__content= item.content
                +pageNumber

extends news

block newContent
    .col.l-9.m-8.c-12
        .row
            article 
                section.news
                    each item in newFeedDetails
                        .col.l-12.m-12.c-12
                            article
                                h4.news__title
                                    a(href="#").news__title-link= item.title 
                                
                                ul.news__daytime
                                    time(datetime=`${item.day}T${item.time}`)
                                    
                                    li.day
                                        i.far.fa-calendar-minus.news__icon
                                        span= item.day
                                    
                                    li.time
                                        i.far.fa-clock.news__icon
                                        span= item.time
                                    
                                    li.day
                                        i.far.fa-comment-dots.news__icon
                                        span= `${item.comment} Bình luận`
                                
                                .news__img(style=`background-image:url(./assets/img/news/${item.urlImg})`)
                                .news__content
                                    each i in item.content
                                        p.content= i
                                        br/

                                .news__img(style=`background-image:url(./assets/img/news/news-5.png)`)
                                .news__content
                                    each i in item.content
                                        p.content= i
                                        br/

                section.news__detail-cmt
                    h4.news__title= `Bình luận (${comment.length})` 
                    
                    each item in comment
                        .cmt__wrap(data-answer= `${item.answer}`)
                            .cmt__img-wrap
                                .cmt__img(style=`background-image:url(./assets/img/cmt/${item.avatar})`)
                            
                            .cmt__body 
                                .cmt__header
                                    .cmt__username= item.username
                                    .cmt__replace(data-username= `${item.username}`) Trả lời
                                .cmt__content= item.content
                                .cmt__daytime
                                    time= item.daytime
                
                section.form__cmt-wrap
                    h4.news__title Viết bình luận
                    
                    form(action="", method="post").form__cmt
                        .form__cmt-info
                            input#username(type="text", name="UserName", placeholder='Họ và tên' required).form__control
                            input#email(type="email", name="Email", placeholder='Email' required).form__control
                            input#phone-number(type="text", name="Phone", placeholder='Phone' required).form__control
                        
                        textarea#comment(name="Comment", cols="30", rows="10", placeholder='Bình luận' required).form__control
                        
                    button(type="submit").btn Gửi